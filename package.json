  "description": "Cross-platform shadow for React Native. Improved version of the abandoned react-native-shadow package",
  "main": "lib/index.js",
  "files": [
    "/lib"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "rm -rf lib && tsc",
    "deploy": "npm run build && npm publish",
    "major": "npm version major",
    "majorD": "npm run build && npm run major && npm publish",
    "minor": "npm version minor",
    "minorD": "npm run build && npm run minor && npm publish",
    "patch": "npm version patch",
    "patchD": "npm run build && npm run patch && npm publish",
    "docs": "typedoc --plugin typedoc-plugin-markdown"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SrBrahma/react-native-shadow-2.git"
  },
  "keywords": [
    "shadow",
    "react-native",
    "cross-platform",
    "typescript",
    "react",
    "native",
    "cross",
    "svg",
    "ios",
    "android",
    "blur",
    "gradient",
    "automatic"
  ],
  "author": "Henrique Bruno (aka SrBrahma)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SrBrahma/react-native-shadow-2/issues"
  },
  "homepage": "https://github.com/SrBrahma/react-native-shadow-2#readme",
  "dependencies": {
    "polished": "^4.1.0"
  },
  "devDependencies": {
    "@types/react-native": "^0.63.49",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^7.20.0",
    "eslint-plugin-react": "^7.22.0",
