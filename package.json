{
  "name": "react-native-shadow-2",
  "version": "3.0.0",
  "description": "Cross-platform shadow for React Native. Improved version of the abandoned react-native-shadow package",
  "main": "lib/index.js",
  "files": [
    "/lib"
  ],
  "scripts": {
    "test": "",
    "clean": "rimraf lib",
    "build": "npm run clean && tsc",
    "deploy": "npm run build && npm publish",
    "majorD": "npm run build && npm run major && npm publish",
    "minorD": "npm run build && npm run minor && npm publish",
    "patchD": "npm run build && npm run patch && npm publish",
    "docs": "typedoc --plugin typedoc-plugin-markdown",
    "readme": "ts-node ./resources/README/generateReadme.ts",
    "readmeWatch": "ts-node-dev --respawn --watch src,resources/README/README.hbs ./resources/README/generateReadme.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SrBrahma/react-native-shadow-2.git"
  },
  "keywords": [
    "shadow",
    "react-native",
    "cross-platform",
    "typescript",
    "react",
    "native",
    "cross",
    "svg",
    "ios",
    "android",
    "blur",
    "gradient",
    "automatic"
  ],
  "author": "Henrique Bruno (aka SrBrahma)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SrBrahma/react-native-shadow-2/issues"
  },
  "homepage": "https://github.com/SrBrahma/react-native-shadow-2#readme",
  "dependencies": {
    "polished": "^4.1.3"
  },
  "devDependencies": {
    "@types/execa": "2.0.0",
    "@types/react-native": "^0.64.10",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "eslint": "^7.28.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-react-native": "^3.11.0",
    "react": "17.0.1",
    "react-native": "0.64.2",
    "react-native-svg": "12.1.1",
    "rimraf": "3.0.2",
    "typedoc": "0.21.0",
    "typedoc-plugin-markdown": "3.10.0",
    "typescript": "^4.3.2"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-svg": "*"
  }
}
